<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beautyinside.ui.LoginActivity">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 타이틀 + 뒤로가기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/back"
                android:rotation="180"
                app:srcCompat="@drawable/ic_next" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="로그인 및 회원가입"
                android:textColor="#B388FF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/editTextId"
            android:hint="아이디를 입력하세요"
            android:background="@android:drawable/editbox_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/editTextPassword"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:background="@android:drawable/editbox_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:text="로그인"
            android:backgroundTint="#B388FF"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 아이디/비밀번호 찾기 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 찾기"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 구분선 -->
        <TextView
            android:text="또는"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="회원 가입"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@null"
            android:background="#000000" />



        <!-- 구글 로그인 버튼 -->
        <LinearLayout
            android:id="@+id/googleLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/google_login_border"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_google_login"
                android:contentDescription="@string/google_login"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Google 계정으로 로그인"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>




        <!-- 카카오 로그인 UI -->
        <LinearLayout
            android:id="@+id/kakaoLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFEB3B"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_kakao_login"
                android:contentDescription="@string/kakao_login" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="카카오 계정으로 로그인"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
